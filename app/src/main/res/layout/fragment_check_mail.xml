<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.CheckMail">

    <ImageView
        android:id="@+id/consumer_check_mail_imageView1"
        android:layout_width="349dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/round1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round1" />

    <TextView
        android:id="@+id/consumer_check_mail_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Check Mail"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="1000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_imageView1"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/consumer_check_mail_imageView1"
        app:layout_constraintTop_toBottomOf="@+id/consumer_check_mail_imageView1" />

    <TextView
        android:id="@+id/consumer_check_mail_textView3"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="we have sent a password recover instruction to your account"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_textView2"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/consumer_check_mail_textView2"
        app:layout_constraintTop_toBottomOf="@+id/consumer_check_mail_textView2" />

    <Button
        android:id="@+id/consumer_check_mail_button"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/manrope_bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Open email app"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_textView3"
        app:layout_constraintStart_toStartOf="@+id/consumer_check_mail_textView3"
        app:layout_constraintTop_toBottomOf="@+id/consumer_check_mail_textView3" />

    <TextView
        android:id="@+id/consumer_check_mail_textView4"
        android:layout_width="309dp"
        android:layout_height="59dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/manrope_light"
        android:gravity="center"
        android:text="Did not receive email check your spam filter or"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_button"
        app:layout_constraintStart_toStartOf="@+id/consumer_check_mail_button"
        app:layout_constraintTop_toBottomOf="@+id/consumer_check_mail_button"
        app:layout_constraintVertical_bias="0.756" />

    <TextView
        android:id="@+id/consumer_check_mail_textView5"
        android:layout_width="102dp"
        android:layout_height="19dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/manrope_light"
        android:gravity="center"
        android:text="Try another email"
        android:textColor="#2196F3"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/consumer_check_mail_textView4"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_textView4"
        app:layout_constraintTop_toTopOf="@+id/consumer_check_mail_textView4"
        app:layout_constraintVertical_bias="0.775" />



</androidx.constraintlayout.widget.ConstraintLayout>